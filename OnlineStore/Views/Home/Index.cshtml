@model OnlineStore.Models.ViewModel.HomeVM

<div class="container">
    <div class="text-center">
        <button class="btn btn-primary filter-button" data-filter="all">All</button>
        @foreach (var category in Model.Category)
        {
            <button class="btn btn-outline-primary filter-button" data-filter="@category.Name.Replace(' ','_')">@category.Name</button>
        }
    </div>
    <br/>
    <div class="row">
        @foreach (var prod in Model.Product)
        {
            <partial name="_GetProguctsHome" model="prod"/>
        }
    </div>
</div>

@section Scripts
{
    <script>
        $(document).ready(function() {

            $(".filter-button").click(function() {

                var value = $(this).attr('data-filter');
                if (value == "all") {
                    $('.filter').show('1000');
                } else {
                    $(".filter").not('.' + value).hide('3000');
                    $('.filter').filter('.' + value).show('3000');

                }
            });

        });
    </script>
}